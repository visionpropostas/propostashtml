    <script>
        // Inicializar ícones
        lucide.createIcons();

        // Lógica de Unmute
        const video = document.getElementById('victoria-video');
        const overlay = document.getElementById('unmute-overlay');
        const icon = document.getElementById('mute-icon');

        overlay.addEventListener('click', () => {
            if (video.muted) {
                video.muted = false;
                video.currentTime = 0; // Reinicia para começar a fala do zero
                video.classList.remove('video-blur');
                video.classList.add('video-clear');
                overlay.style.background = "transparent";
                overlay.querySelector('div').style.display = "none";
                overlay.querySelector('span').innerText = "Reproduzindo agora";
                setTimeout(() => { overlay.style.display = "none"; }, 1500);
            }
        });
    </script>
