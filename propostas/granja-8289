    <script>
        // Init Icons
        lucide.createIcons();

        // Video Tap to Unmute & Play/Pause Logic
        document.addEventListener("DOMContentLoaded", function() {
            const video = document.getElementById("vision-video");
            const overlay = document.getElementById("unmute-overlay");

            if (video && overlay) {
                overlay.addEventListener("click", function(e) {
                    e.stopPropagation(); 
                    video.muted = false;
                    video.loop = false; 
                    video.currentTime = 0;
                    video.play();
                    
                    overlay.style.opacity = "0";
                    setTimeout(() => {
                        overlay.style.display = "none";
                    }, 500); 
                });

                video.addEventListener("click", function() {
                    if (overlay.style.display === "none") {
                        if (video.paused) {
                            video.play();
                        } else {
                            video.pause();
                        }
                    }
                });
            }
        });

        // Lock Screen Logic
        const accessCodes = ["granja2026", "vision2026", "granjajulieta2026"];
        function checkPassword() {
            const input = document.getElementById('password-input');
            const errorMsg = document.getElementById('error-msg');
            const lockScreen = document.getElementById('lock-screen');
            const htmlRoot = document.getElementById('html-root');
            const bodyRoot = document.body; 
            
            const typedValue = input.value.trim().toLowerCase();

            if(accessCodes.includes(typedValue)) {
                // Sucesso
                lockScreen.style.opacity = '0';
                
                // --- CÓDIGO DO ALERTA POR E-MAIL (STATIC FORMS) ---
                fetch('https://api.staticforms.dev/submit', {
                    method: 'POST',
                    headers: { 
                        'Content-Type': 'application/json',
                        'Accept': 'application/json'
                    },
                    body: JSON.stringify({
                        accessKey: "sf_077ej49gjha153gk3m6ceecf", // Chave da conta Vision
                        apiKey: "sf_077ej49gjha153gk3m6ceecf", // Fallback de documentação
                        subject: "🚨 ALERTA: Proposta Acessada (Granja Julieta)",
                        name: "Sistema Vision Condo",
                        email: "diretoria@visionsp.com.br", 
                        message: `A proposta acabou de ser aberta!\n\n🏢 Cliente: Condomínio Granja Julieta\n👤 A/C: Isabelah e Síndico\n🔑 Senha Utilizada: ${typedValue}\n🕒 Horário: ${new Date().toLocaleString('pt-BR')}`
                    })
                }).catch(error => console.log('Log de acesso registrado.'));
                // --- FIM DO CÓDIGO DO ALERTA ---

                setTimeout(() => {
                    lockScreen.style.display = 'none';
                    if(htmlRoot) htmlRoot.classList.remove('overflow-hidden'); 
                    if(bodyRoot) bodyRoot.classList.remove('overflow-hidden');
                }, 700);
            } else {
                // Erro
                errorMsg.classList.remove('hidden');
                input.classList.add('border-red-500');
                input.classList.add('animate-pulse');
                setTimeout(() => input.classList.remove('animate-pulse'), 500);
            }
        }
        
        document.getElementById('password-input').addEventListener("keypress", (e) => e.key === "Enter" && checkPassword());

        // Scroll Animation
        window.addEventListener('scroll', () => {
            document.querySelectorAll('.reveal').forEach(el => {
                if (el.getBoundingClientRect().top < window.innerHeight - 100) el.classList.add('active');
            });
        });
    </script>
