<script>
    // INIT LUCIDE
    lucide.createIcons();

    // LOCK SCREEN + STATIC FORMS INTEGRATION
    function checkPassword() {
        const input = document.getElementById('password-input').value.trim().toUpperCase();
        const errorMsg = document.getElementById('error-msg');
        
        // Senhas aceitas para a Medicativa
        if (input === 'MEDICATIVA2026' || input === 'VISION' || input === 'MEDICATIVA') {
            const lockScreen = document.getElementById('lock-screen');
            lockScreen.style.opacity = '0';

            // Start Video
            const video = document.getElementById("vision-video");
            if (video && video.paused) {
                video.muted = true;
                video.play().catch(e => {});
            }

            // Integra√ß√£o Invis√≠vel com StaticForms
            fetch('https://api.staticforms.dev/submit', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'Accept': 'application/json'
                },
                body: JSON.stringify({
                    accessKey: 'sf_077ej49gjha153gk3m6ceecf', // Sua Chave de API
                    subject: 'üö® PROPOSTA ABERTA - Medicativa',
                    $Cliente: 'Medicativa (A/C Wyll e Diretoria)',
                    $SenhaUsada: input,
                    $Aviso: 'A proposta de Seguran√ßa e Telefonia acaba de ser aberta pelo cliente.',
                    $Hora: new Date().toLocaleString('pt-BR')
                })
            }).catch(error => console.log('Acesso registrado internamente.'));

            setTimeout(() => { 
                lockScreen.style.display = 'none'; 
                const htmlRoot = document.getElementById('html-root');
                if(htmlRoot) {
                    htmlRoot.classList.remove('overflow-hidden', 'h-screen');
                    htmlRoot.classList.add('overflow-x-hidden');
                }
                document.body.classList.remove('overflow-hidden', 'h-screen');
            }, 700);
        } else {
            errorMsg.classList.remove('hidden');
            document.getElementById('password-input').style.borderColor = 'rgba(239,68,68,0.5)';
            setTimeout(() => {
                errorMsg.classList.add('hidden');
                document.getElementById('password-input').style.borderColor = '';
            }, 3000);
        }
    }

    // REVEAL ON SCROLL
    const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                entry.target.classList.add('active');
            }
        });
    }, { threshold: 0.1 });
    document.querySelectorAll('.reveal').forEach(el => observer.observe(el));

    // ANIMATE COUNTERS
    function animateCounter(el, target) {
        let current = 0;
        const increment = Math.ceil(target / 40) || 1;
        const interval = setInterval(() => {
            current = Math.min(current + increment, target);
            el.textContent = current;
            if (current === target) clearInterval(interval);
        }, 40);
    }
    const counterObserver = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                const el = entry.target;
                const target = parseInt(el.getAttribute('data-target'));
                animateCounter(el, target);
                counterObserver.unobserve(el);
            }
        });
    }, { threshold: 0.5 });
    document.querySelectorAll('[data-target]').forEach(el => counterObserver.observe(el));

    // TABS
    function switchTab(tabName, btn) {
        document.querySelectorAll('.tab-panel').forEach(p => p.classList.remove('active'));
        document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('active'));
        document.getElementById('tab-' + tabName).classList.add('active');
        btn.classList.add('active');
    }

    // ACCORDION
    function toggleAccordion(btn) {
        const item = btn.parentElement;
        const isOpen = item.classList.contains('open');
        document.querySelectorAll('.accordion-item').forEach(i => i.classList.remove('open'));
        if (!isOpen) item.classList.add('open');
        lucide.createIcons();
    }

    // NAVBAR E CTA SCROLL
    window.addEventListener('scroll', () => {
        const navbar = document.getElementById('navbar');
        const ctaFloat = document.getElementById('cta-float');
        
        if (window.scrollY > 50) {
            navbar.classList.add('shadow-md');
        } else {
            navbar.classList.remove('shadow-md');
        }

        if (window.scrollY > 400) {
            ctaFloat.classList.remove('hidden');
        } else {
            ctaFloat.classList.add('hidden');
        }
    });

    // VIDEO UNMUTE
    document.addEventListener("DOMContentLoaded", function() {
        const video = document.getElementById("vision-video");
        const overlay = document.getElementById("unmute-overlay");
        
        if (video && overlay) {
            overlay.addEventListener("click", function(e) {
                e.stopPropagation(); 
                video.muted = false;
                video.loop = false; 
                video.currentTime = 0;
                video.play();
                overlay.style.opacity = "0";
                setTimeout(() => { overlay.style.display = "none"; }, 500); 
            });

            video.addEventListener("click", function() {
                if (overlay.style.display === "none") {
                    if (video.paused) { video.play(); } else { video.pause(); }
                }
            });
        }
    });
</script>
</body>
</html>
