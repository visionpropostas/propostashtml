    <!-- Scripts -->
    <script>
        lucide.createIcons();

        // Lógica do Navbar e Botão Flutuante do WhatsApp no Scroll
        window.addEventListener('scroll', () => {
            const navbar = document.getElementById('navbar');
            const floatingWa = document.getElementById('floating-wa');
            
            // Sombra no Navbar
            if (window.scrollY > 20) {
                navbar.classList.add('shadow-md');
                navbar.classList.remove('shadow-sm');
            } else {
                navbar.classList.add('shadow-sm');
                navbar.classList.remove('shadow-md');
            }

            // Exibir WhatsApp Flutuante apenas após passar do Hero (aprox 600px)
            if (window.scrollY > 600) {
                floatingWa.classList.remove('opacity-0', 'translate-y-10', 'pointer-events-none');
            } else {
                floatingWa.classList.add('opacity-0', 'translate-y-10', 'pointer-events-none');
            }
        });

        // Lógica do Menu Mobile (Sanduíche)
        const btnMenu = document.getElementById('mobile-menu-btn');
        const menu = document.getElementById('mobile-menu');
        const mobileLinks = document.querySelectorAll('.mobile-link');

        btnMenu.addEventListener('click', () => {
            menu.classList.toggle('hidden');
        });

        // Fecha o menu mobile ao clicar em um link
        mobileLinks.forEach(link => {
            link.addEventListener('click', () => {
                menu.classList.add('hidden');
            });
        });
    </script>
</body>
</html>
