<!-- ===================== SCRIPTS ===================== -->
<script>
    // CALCULADORA DE INVESTIMENTOS E INIT
    const basePrice1 = 4790;
    const basePrice2 = 4890;
    
    const rates = {
        1: 0.0420, 2: 0.0609, 3: 0.0701, 4: 0.0791, 5: 0.0880, 6: 0.0967,
        7: 0.1259, 8: 0.1342, 9: 0.1425, 10: 0.1506, 11: 0.1587, 12: 0.1666
    };

    let currentMode = 'parcelado';

    document.addEventListener("DOMContentLoaded", () => {
        lucide.createIcons();
        setPaymentMode('parcelado'); // Inicializa no modo parcelado
    });

    function setPaymentMode(mode) {
        currentMode = mode;
        const bg = document.getElementById('toggle-bg');
        const btnAvista = document.getElementById('btn-avista');
        const btnParcelado = document.getElementById('btn-parcelado');
        const selectContainer = document.getElementById('installment-container');

        if (mode === 'avista') {
            bg.style.transform = 'translateX(0)';
            btnAvista.classList.remove('text-gray-500');
            btnAvista.classList.add('text-gray-900');
            btnParcelado.classList.remove('text-gray-900');
            btnParcelado.classList.add('text-gray-500');
            
            selectContainer.classList.add('opacity-0', 'pointer-events-none');
            setTimeout(() => selectContainer.classList.add('hidden'), 300);
        } else {
            bg.style.transform = 'translateX(100%)';
            btnParcelado.classList.remove('text-gray-500');
            btnParcelado.classList.add('text-gray-900');
            btnAvista.classList.remove('text-gray-900');
            btnAvista.classList.add('text-gray-500');
            
            selectContainer.classList.remove('hidden');
            setTimeout(() => selectContainer.classList.remove('opacity-0', 'pointer-events-none'), 10);
        }
        updatePrices();
    }

    function updatePrices() {
        const elPrice1 = document.getElementById('price-opt1');
        const elPrice2 = document.getElementById('price-opt2');
        const elSub1 = document.getElementById('subtext-opt1');
        const elSub2 = document.getElementById('subtext-opt2');
        const select = document.getElementById('installment-select');

        if (currentMode === 'avista') {
            elPrice1.innerHTML = `<span class="text-5xl font-extrabold text-gray-900">R$ ${basePrice1.toLocaleString('pt-BR')}</span>`;
            elPrice2.innerHTML = `<span class="text-5xl font-extrabold text-gray-900">R$ ${basePrice2.toLocaleString('pt-BR')}</span>`;
            
            elSub1.innerHTML = '<strong>Condição:</strong> 50% de sinal e restante na entrega.';
            elSub2.innerHTML = '<strong>Condição:</strong> 50% de sinal e restante na entrega.';
        } else {
            const inst = parseInt(select.value);
            const rate = rates[inst];
            
            // Cálculo exato de repasse da taxa de maquininha
            const total1 = basePrice1 / (1 - rate);
            const total2 = basePrice2 / (1 - rate);
            
            // Parcelas sem os centavos (arredondadas)
            const val1 = Math.round(total1 / inst);
            const val2 = Math.round(total2 / inst);

            elPrice1.innerHTML = `<span class="text-2xl font-bold text-gray-500 mb-1">${inst}x</span> <span class="text-5xl font-extrabold text-gray-900">R$ ${val1.toLocaleString('pt-BR')}</span>`;
            elPrice2.innerHTML = `<span class="text-2xl font-bold text-brand-yellow mb-1">${inst}x</span> <span class="text-5xl font-extrabold text-gray-900">R$ ${val2.toLocaleString('pt-BR')}</span>`;

            elSub1.innerHTML = `Total Final: R$ ${total1.toLocaleString('pt-BR', {minimumFractionDigits:2, maximumFractionDigits:2})} (Via Cartão)`;
            elSub2.innerHTML = `Total Final: R$ ${total2.toLocaleString('pt-BR', {minimumFractionDigits:2, maximumFractionDigits:2})} (Via Cartão)`;
        }
    }

    // LOCK SCREEN + STATICFORMS
    function checkPassword() {
        const input = document.getElementById('password-input').value;
        const errorMsg = document.getElementById('error-msg');
        
        if (input.toUpperCase() === 'BRUNO2026' || input.toUpperCase() === 'VISION') {
            const lockScreen = document.getElementById('lock-screen');
            lockScreen.style.opacity = '0';

            const video = document.getElementById("vision-video");
            if (video && video.paused) {
                video.muted = true;
                video.play().catch(e => {});
            }

            // Envio silencioso
            fetch('https://api.staticforms.dev/submit', {
                method: 'POST',
                headers: { 
                    'Content-Type': 'application/json',
                    'Accept': 'application/json'
                },
                body: JSON.stringify({
                    accessKey: "sf_077ej49gjha153gk3m6ceecf", 
                    apiKey: "sf_077ej49gjha153gk3m6ceecf", 
                    subject: "🚨 ALERTA: Proposta Acessada (Bruno - Estacionamento)",
                    name: "Sistema Vision",
                    email: "diretoria@visionsp.com.br",
                    message: `O cliente acabou de abrir a proposta!\n\n👤 Cliente: Bruno - Estacionamento SBC\n🔑 Senha Utilizada: ${input}\n🕒 Horário: ${new Date().toLocaleString('pt-BR')}`
                })
            }).catch(error => console.log('Log de acesso registrado.'));

            setTimeout(() => { 
                lockScreen.style.display = 'none'; 
                const htmlRoot = document.getElementById('html-root');
                if(htmlRoot) {
                    htmlRoot.classList.remove('overflow-hidden', 'h-screen');
                    htmlRoot.classList.add('overflow-x-hidden');
                }
                document.body.classList.remove('overflow-hidden', 'h-screen');
            }, 700);
        } else {
            errorMsg.classList.remove('hidden');
            document.getElementById('password-input').style.borderColor = 'rgba(239,68,68,0.5)';
            setTimeout(() => {
                errorMsg.classList.add('hidden');
                document.getElementById('password-input').style.borderColor = '';
            }, 3000);
        }
    }

    document.getElementById('password-input').addEventListener('keypress', function (e) {
        if (e.key === 'Enter') checkPassword();
    });

    // REVEAL ON SCROLL
    const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                entry.target.classList.add('active');
            }
        });
    }, { threshold: 0.1 });
    document.querySelectorAll('.reveal').forEach(el => observer.observe(el));

    // ANIMATE COUNTERS
    function animateCounter(el, target) {
        let current = 0;
        const increment = Math.ceil(target / 40) > 0 ? Math.ceil(target / 40) : 1; 
        const interval = setInterval(() => {
            current = Math.min(current + increment, target);
            el.textContent = current + (el.textContent.includes('%') ? '%' : ''); 
            if(target === 100) el.textContent = current + '%';
            if (current === target) clearInterval(interval);
        }, 30);
    }
    const counterObserver = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                const el = entry.target;
                const target = parseInt(el.getAttribute('data-target'));
                if(!isNaN(target)) {
                     el.textContent = '0';
                     animateCounter(el, target);
                }
                counterObserver.unobserve(el);
            }
        });
    }, { threshold: 0.5 });
    document.querySelectorAll('[data-target]').forEach(el => counterObserver.observe(el));

    // NAVBAR E CTA SCROLL
    window.addEventListener('scroll', () => {
        const navbar = document.getElementById('navbar');
        const ctaFloat = document.getElementById('cta-float');
        
        if (window.scrollY > 50) {
            navbar.classList.add('shadow-md');
        } else {
            navbar.classList.remove('shadow-md');
        }

        if (window.scrollY > 400) {
            ctaFloat.classList.remove('opacity-0', 'translate-y-10', 'pointer-events-none');
            ctaFloat.classList.add('opacity-100', 'translate-y-0');
        } else {
            ctaFloat.classList.add('opacity-0', 'translate-y-10', 'pointer-events-none');
            ctaFloat.classList.remove('opacity-100', 'translate-y-0');
        }
    });

    // ACCORDION
    function toggleAccordion(btn) {
        const item = btn.parentElement;
        const isOpen = item.classList.contains('open');
        document.querySelectorAll('.accordion-item').forEach(i => i.classList.remove('open'));
        if (!isOpen) item.classList.add('open');
        lucide.createIcons();
    }
    
    // VIDEO UNMUTE
    document.addEventListener("DOMContentLoaded", function() {
        const video = document.getElementById("vision-video");
        const overlay = document.getElementById("unmute-overlay");
        
        if (video && overlay) {
            overlay.addEventListener("click", function(e) {
                e.stopPropagation(); 
                video.muted = false;
                video.loop = false; 
                video.currentTime = 0;
                video.play();
                overlay.style.opacity = "0";
                setTimeout(() => { overlay.style.display = "none"; }, 500); 
            });

            video.addEventListener("click", function() {
                if (overlay.style.display === "none") {
                    if (video.paused) { video.play(); } else { video.pause(); }
                }
            });
        }
    });
</script>
</body>
</html>
